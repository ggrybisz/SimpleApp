<Window x:Class="proj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleApp" Height="350" Width="525" MinHeight="250" MinWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="273*"></RowDefinition>
            <RowDefinition Height="38" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Height="254" HorizontalAlignment="Left" Margin="6,4,0,0" Name="mainTextBlock"  VerticalAlignment="Top" Width="485" TextWrapping="Wrap"/>
        <Button Grid.Row="1" Content="Add" Height="23" HorizontalAlignment="Left" Margin="6,0,0,15" Name="openButton" VerticalAlignment="Bottom" Width="75" Click="openButton_Click"/>
        <Button Grid.Row="1" Content="Help" Height="23" HorizontalAlignment="Right" Margin="0,0,12,15" Name="helpButton" VerticalAlignment="Bottom" Width="75" Click="helpButton_Click"/>
    </Grid>
</Window>
